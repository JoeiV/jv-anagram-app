<h1>Words</h1>
  <table class="table table-striped">
    <thead>
      <th>Text</th>
      <th>Letters</th>    
    </thead>
    <tbody>
        <% if !@words.nil? %>
        <% @words.each do |word| %>
        <tr>
            <td> <a href="<%= "/words/#{word.id}" %>"> <%= "#{word.text}" %> </a>  </td>
            <td> <%= "#{word.letters}" %>  </td>
        <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>